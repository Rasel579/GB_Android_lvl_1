<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/shops"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/calculatorEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/editTextMarginLeftAndRight"
        android:layout_marginTop="@dimen/editTextMarginLeftAndRight"
        android:layout_marginBottom="@dimen/editTextMarginBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/material_on_surface_emphasis_medium"
        android:inputType="number"
        android:labelFor="@id/calculatorEditText"
        android:textSize="@dimen/editTextTextSize"
        android:hint="@string/hintForCalcEditText"
        />

    <include
        layout="@layout/calc_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tableMarginLeftAndRight"
        android:layout_marginStart="@dimen/tableMarginLeftAndRight"
        android:layout_marginBottom="@dimen/tableMarginBottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculatorEditText"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>